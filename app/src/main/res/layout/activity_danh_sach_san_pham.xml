<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgr_app"
    tools:context=".DanhSachSanPham">
    <androidx.appcompat.widget.SearchView
        android:id="@+id/seachviewds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="10"
        android:background="@drawable/back_tim"
        app:iconifiedByDefault="false"
        app:queryHint="tìm kiếm" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/grid_sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/seachviewds"
        android:layout_marginStart="@dimen/dm8sp"
        android:layout_marginTop="@dimen/dm8sp"
        android:layout_marginEnd="@dimen/dm8sp"
        android:layout_marginBottom="@dimen/dm70sp"

        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_baseline_message_24" />
</RelativeLayout>