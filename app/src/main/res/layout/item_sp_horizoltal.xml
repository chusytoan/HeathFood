<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_food"
            android:layout_width="120dp"
            android:scaleType="centerCrop"
            android:layout_height="100dp"
            android:src="@drawable/img1"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv_namOfFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grilled Skewes"
            android:maxLength="15"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="10">
            <TextView
                android:id="@+id/tv_price_food"
                android:layout_width="wrap_content"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:text="$3.30"
                android:textColor="#37C305"
                android:textStyle="bold"
                android:gravity="left"
                />
            <TextView
                android:id="@+id/tv_time_ship"
                android:layout_width="wrap_content"
                android:layout_weight="5"
                android:text="15minite"
                android:textStyle="italic"
                android:textColor="#DF4312"
                android:gravity="right"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="10"
            >
            <TextView
                android:id="@+id/tv_gerMan_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spicy mutton"
                android:textStyle="italic"
                android:layout_weight="5"
                android:gravity="left"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <ImageView
                android:id="@+id/imgFood_favorite"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_favorite_border_24"

                android:layout_gravity="right"
                android:layout_weight="5"
                />
            <TextView
                android:id="@+id/tv_luotTym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgFood_favorite"
                android:layout_marginLeft="4dp"
                />
        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>