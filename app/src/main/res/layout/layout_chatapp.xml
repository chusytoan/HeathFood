<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    android:background="#748CA5">
    <View
        android:id="@+id/view_bgr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dm16sp"
        android:background="@drawable/backgr_view"
        app:layout_constraintBottom_toTopOf="@id/layout_send"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_back"
        android:layout_width="@dimen/dm30sp"
        android:layout_height="@dimen/dm30sp"
        android:layout_marginStart="@dimen/dm16sp"
        android:layout_marginLeft="@dimen/dm16sp"
        android:layout_marginTop="@dimen/dm12sp"
        android:padding="@dimen/dm5sp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_info"
        android:layout_width="@dimen/dm30sp"
        android:layout_height="@dimen/dm30sp"
        android:layout_marginEnd="@dimen/dm16sp"
        android:layout_marginRight="@dimen/dm16sp"
        android:layout_marginTop="@dimen/dm12sp"
        android:padding="@dimen/dm5sp"
        android:src="@drawable/ic_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dm8sp"
        android:layout_marginEnd="@dimen/dm8sp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Hỗ trợ khách hàng"
        app:layout_constraintBottom_toBottomOf="@id/img_back"
        app:layout_constraintEnd_toStartOf="@id/img_info"
        app:layout_constraintStart_toEndOf="@id/img_back"
        app:layout_constraintTop_toTopOf="@id/img_back"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:padding="@dimen/dm20sp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="@id/view_bgr"
        app:layout_constraintTop_toBottomOf="@+id/img_back"
    />

    <FrameLayout
        android:id="@+id/layout_send"
        android:layout_width="@dimen/height_tv"
        android:layout_height="@dimen/height_tv"
        android:layout_marginEnd="@dimen/dm16sp"
        android:layout_marginBottom="80sp"
        android:layout_marginRight="@dimen/dm16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_send"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dm4sp"
            android:layout_marginLeft="@dimen/dm4sp"
            android:padding="@dimen/dm8sp"
            android:src="@drawable/ic_send"
            android:tint="@color/white"/>

    </FrameLayout>
    <EditText
        android:id="@+id/text_inputchat"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_tv"
        android:layout_marginStart="@dimen/dm8sp"
        android:layout_marginLeft="@dimen/dm16sp"
        android:layout_marginEnd="@dimen/dm8sp"
        android:layout_marginRight="@dimen/dm8sp"
        android:background="@drawable/backgr_chatinput"
        android:hint="Nhập nội dung chat"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="text"
        android:paddingStart="@dimen/dm16sp"
        android:paddingEnd="@dimen/dm16sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/layout_send"
        app:layout_constraintEnd_toStartOf="@id/layout_send"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>