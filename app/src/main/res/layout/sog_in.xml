<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/img_1"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="280dp"
        android:layout_height="201dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:src="@drawable/logoo" />

    <EditText
        android:id="@+id/ed_name"
        android:layout_width="304dp"
        android:layout_height="50dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_gravity="center"
        android:drawableStart="@drawable/custom_name_focus"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_input"
        android:hint="Name"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/ed_email"
        android:layout_width="304dp"
        android:layout_height="50dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_gravity="center"
        android:drawableStart="@drawable/custom_email"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_input"
        android:hint="Email"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/ed_password"
        android:layout_width="304dp"
        android:layout_height="50dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_pass"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/enter_password"
        android:layout_width="304dp"
        android:layout_height="50dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_pass"
        android:layout_marginTop="10dp"

        android:hint="Enter password"
        android:textSize="20dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="By continuing, you agreeto Heathy food's"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temps of Service"
            android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" and "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Polity"
            android:textStyle="bold"/>
    </LinearLayout>


</LinearLayout>


    <Button
        android:id="@+id/btn_ok"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#181818"
        android:text="SAVE"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="or Sign in with" />

</LinearLayout>