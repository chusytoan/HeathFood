<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_food"
            android:layout_width="120dp"
            android:scaleType="centerCrop"
            android:layout_height="100dp"
            android:src="@drawable/img1"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv_namOfFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grilled Skewes"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="10">
            <TextView
                android:id="@+id/tv_price_food"
                android:layout_width="wrap_content"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:text="$3.30"
                android:textColor="#37C305"
                android:textStyle="bold"
                android:gravity="left"
                />
            <TextView
                android:id="@+id/tv_time_ship"
                android:layout_width="wrap_content"
                android:layout_weight="5"
                android:text="15minite"
                android:textStyle="italic"
                android:textColor="#DF4312"
                android:gravity="right"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="10"
            >
            <TextView
                android:id="@+id/tv_gerMan_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spicy mutton"
                android:textStyle="italic"
                android:layout_weight="5"
                android:gravity="left"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:weightSum="10"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/delete_fv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="10"
                >
                <ImageView
                    android:id="@+id/ctsp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_assignment_24"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="right"
                    />
                <TextView
                    android:id="@+id/btn_mua"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="right"
                    android:textColor="@color/black"
                    android:text="Chi tiáº¿t"
                    android:textSize="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>